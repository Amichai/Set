<UserControl x:Class="set.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180" PreviewMouseDown="UserControl_PreviewMouseDown">
    <Grid Name="GridRoot" VerticalAlignment="Center" Height="300">
        <Border BorderBrush="Black"
                Background="White"
                BorderThickness="3" CornerRadius="30" Margin="10">
            <StackPanel Name="Root" Width="180"
                        Orientation="Vertical" VerticalAlignment="Center">
                <!--<Polygon Points="0,25 80,0 160,25 80,50" Fill="Purple">
                    
                </Polygon>-->

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
